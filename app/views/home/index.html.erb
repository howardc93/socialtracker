<div class="row" style="text-align:center;">
<%= form_tag "/auth/twitter", :method => "get", :html => {:class => "form-horizontal"} do%>
<legend>
Did someone unfollow or unfriend you?  Keep track of your social networks with this site.
</legend>

<div class='form-actions' style="width:30%;margin:auto;"> 
<p class="help-block">
Authenticate with a social network:
</p>

<p id="twitterlogin">
<%=image_submit_tag("twitter_signin.png") %>
</p>

<p id="fblogin">
	<a href="<%=fbauth.url_for_oauth_code%>"><%=image_tag("facebook_signin.png")%></a>
</p>
</div>


<%end%>

</div>

